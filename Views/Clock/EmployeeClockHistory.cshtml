@using SummerSplashWeb.Models
@{
    ViewData["Title"] = "Clock History";
    var user = ViewBag.User as User;
    var startDate = (DateTime)ViewBag.StartDate;
    var endDate = (DateTime)ViewBag.EndDate;
    var clockRecords = ViewBag.ClockRecords as List<ClockRecord> ?? new List<ClockRecord>();
    var locations = ViewBag.Locations as List<JobLocation> ?? new List<JobLocation>();
    var totalHours = (decimal)ViewBag.TotalHours;
}

<div class="content-area">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">
                <i class="bi bi-person-circle me-2"></i>@user.FirstName @user.LastName
            </h2>
            <p class="text-muted mb-0">Clock History - @user.Position</p>
        </div>
        <div>
            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-2"></i>Back to Time Clock
            </a>
        </div>
    </div>

    <!-- Summary Stats -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2">Total Hours</h6>
                    <h2 class="card-title mb-0">@totalHours.ToString("F1")</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2">Total Shifts</h6>
                    <h2 class="card-title mb-0">@clockRecords.Count</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2">Completed</h6>
                    <h2 class="card-title mb-0">@clockRecords.Count(r => r.ClockOutTime.HasValue)</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2">Active</h6>
                    <h2 class="card-title mb-0">@clockRecords.Count(r => !r.ClockOutTime.HasValue)</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Date Range Filter -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label class="form-label">Start Date</label>
                    <input type="date" name="startDate" class="form-control"
                           value="@startDate.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">End Date</label>
                    <input type="date" name="endDate" class="form-control"
                           value="@endDate.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search me-2"></i>Filter
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Clock Records -->
    <div class="card">
        <div class="card-header bg-light">
            <h5 class="mb-0"><i class="bi bi-clock-history me-2"></i>Clock Records</h5>
        </div>
        <div class="card-body">
            @if (clockRecords.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Location</th>
                                <th>Clock In</th>
                                <th>Clock Out</th>
                                <th>Total Hours</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var record in clockRecords.OrderByDescending(r => r.ClockInTime))
                            {
                                <tr>
                                    <td>@record.ClockInTime.ToString("ddd, MMM d, yyyy")</td>
                                    <td>
                                        <i class="bi bi-geo-alt me-1"></i>@record.LocationName
                                    </td>
                                    <td>@record.ClockInTime.ToString("h:mm tt")</td>
                                    <td>
                                        @if (record.ClockOutTime.HasValue)
                                        {
                                            @record.ClockOutTime.Value.ToString("h:mm tt")
                                        }
                                        else
                                        {
                                            <span class="text-muted">Not yet</span>
                                        }
                                    </td>
                                    <td>
                                        @if (record.TotalHours.HasValue)
                                        {
                                            <span class="badge bg-secondary">@record.TotalHours.Value.ToString("F1")h</span>
                                        }
                                        else
                                        {
                                            var currentDuration = (DateTime.Now - record.ClockInTime).TotalHours;
                                            <span class="badge bg-success">@currentDuration.ToString("F1")h (Active)</span>
                                        }
                                    </td>
                                    <td>
                                        @if (record.ClockOutTime.HasValue)
                                        {
                                            <span class="badge bg-secondary">Completed</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr class="table-light">
                                <th colspan="4" class="text-end">Total:</th>
                                <th><span class="badge bg-primary">@totalHours.ToString("F1")h</span></th>
                                <th></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-clock-history" style="font-size: 4rem; color: #ccc;"></i>
                    <p class="text-muted mt-3">No clock records found for this period</p>
                </div>
            }
        </div>
    </div>
</div>
