@using SummerSplashWeb.Models
@{
    ViewData["Title"] = "Employee Schedule";
    var user = ViewBag.User as User;
    var startDate = (DateTime)ViewBag.StartDate;
    var endDate = (DateTime)ViewBag.EndDate;
    var schedules = ViewBag.Schedules as List<Schedule> ?? new List<Schedule>();
    var locations = ViewBag.Locations as List<JobLocation> ?? new List<JobLocation>();

    var totalHours = schedules.Sum(s => s.ScheduledHours);
    var totalDays = schedules.Select(s => s.ScheduledDate.Date).Distinct().Count();
}

<div class="content-area">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">
                <i class="bi bi-person-circle me-2"></i>@user.FirstName @user.LastName
            </h2>
            <p class="text-muted mb-0">@user.Position - Schedule Management</p>
        </div>
        <div>
            <a href="@Url.Action("Index")" class="btn btn-outline-secondary me-2">
                <i class="bi bi-arrow-left me-2"></i>Back
            </a>
            <a href="@Url.Action("Create", new { date = startDate, userId = user.UserId })" class="btn btn-success">
                <i class="bi bi-plus-circle me-2"></i>Add Schedule
            </a>
        </div>
    </div>

    <!-- Alerts -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Summary Stats -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2">Total Hours</h6>
                    <h2 class="card-title mb-0">@totalHours.ToString("F1")</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2">Scheduled Days</h6>
                    <h2 class="card-title mb-0">@totalDays</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2">Total Shifts</h6>
                    <h2 class="card-title mb-0">@schedules.Count</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2">Avg Hours/Day</h6>
                    <h2 class="card-title mb-0">@((totalDays > 0 ? totalHours / totalDays : 0).ToString("F1"))</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Date Navigation -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-md-4">
                    <h5 class="mb-0">
                        @startDate.ToString("MMM d") - @endDate.ToString("MMM d, yyyy")
                    </h5>
                </div>
                <div class="col-md-8 text-end">
                    <div class="btn-group" role="group">
                        <a href="@Url.Action("EmployeeSchedule", new { userId = user.UserId, startDate = startDate.AddDays(-7) })"
                           class="btn btn-outline-secondary">
                            <i class="bi bi-chevron-left"></i> Previous Week
                        </a>
                        <a href="@Url.Action("EmployeeSchedule", new { userId = user.UserId, startDate = DateTime.Now })"
                           class="btn btn-outline-secondary">
                            Today
                        </a>
                        <a href="@Url.Action("EmployeeSchedule", new { userId = user.UserId, startDate = startDate.AddDays(7) })"
                           class="btn btn-outline-secondary">
                            Next Week <i class="bi bi-chevron-right"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Weekly Calendar View -->
    <div class="card mb-4">
        <div class="card-header bg-light">
            <h5 class="mb-0"><i class="bi bi-calendar-week me-2"></i>Week View</h5>
        </div>
        <div class="card-body p-0">
            <div class="row g-0">
                @for (var date = startDate; date <= endDate; date = date.AddDays(1))
                {
                    var daySchedules = schedules.Where(s => s.ScheduledDate.Date == date.Date).OrderBy(s => s.StartTime).ToList();
                    var dayHours = daySchedules.Sum(s => s.ScheduledHours);
                    var isToday = date.Date == DateTime.Now.Date;

                    <div class="col-md-12 border-bottom">
                        <div class="p-3 @(isToday ? "bg-primary bg-opacity-10" : "")">
                            <div class="row">
                                <div class="col-md-2">
                                    <h6 class="mb-0">@date.ToString("dddd")</h6>
                                    <small class="text-muted">@date.ToString("MMM d, yyyy")</small>
                                </div>
                                <div class="col-md-8">
                                    @if (daySchedules.Any())
                                    {
                                        foreach (var schedule in daySchedules)
                                        {
                                            var location = locations.FirstOrDefault(l => l.LocationId == schedule.LocationId);
                                            <div class="d-inline-block me-2 mb-2">
                                                <div class="card" style="min-width: 250px;">
                                                    <div class="card-body p-2">
                                                        <div class="d-flex justify-content-between align-items-start">
                                                            <div>
                                                                <h6 class="mb-1">
                                                                    <i class="bi bi-clock me-1"></i>@schedule.TimeRange
                                                                </h6>
                                                                <small class="text-muted">
                                                                    <i class="bi bi-geo-alt me-1"></i>@(location?.Name ?? "No location")
                                                                </small>
                                                                @if (!string.IsNullOrEmpty(schedule.Notes))
                                                                {
                                                                    <div class="mt-1">
                                                                        <small><i class="bi bi-sticky me-1"></i>@schedule.Notes</small>
                                                                    </div>
                                                                }
                                                            </div>
                                                            <div class="btn-group-vertical btn-group-sm">
                                                                <a href="@Url.Action("Edit", new { id = schedule.ScheduleId })"
                                                                   class="btn btn-outline-primary btn-sm">
                                                                    <i class="bi bi-pencil"></i>
                                                                </a>
                                                                <button type="button"
                                                                        class="btn btn-outline-danger btn-sm"
                                                                        data-bs-toggle="modal"
                                                                        data-bs-target="#deleteModal@(schedule.ScheduleId)">
                                                                    <i class="bi bi-trash"></i>
                                                                </button>
                                                            </div>
                                                        </div>
                                                        <div class="mt-2">
                                                            <span class="badge bg-secondary">@schedule.ScheduledHours.ToString("F1") hrs</span>
                                                        </div>
                                                    </div>
                                                </div>

                                                <!-- Delete Modal -->
                                                <div class="modal fade" id="deleteModal@(schedule.ScheduleId)" tabindex="-1">
                                                    <div class="modal-dialog">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title">Delete Schedule</h5>
                                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                            </div>
                                                            <div class="modal-body">
                                                                <p>Are you sure you want to delete this schedule?</p>
                                                                <ul>
                                                                    <li><strong>Date:</strong> @schedule.ScheduledDate.ToString("MMM d, yyyy")</li>
                                                                    <li><strong>Time:</strong> @schedule.TimeRange</li>
                                                                    <li><strong>Location:</strong> @(location?.Name ?? "N/A")</li>
                                                                </ul>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                                <form asp-action="Delete" asp-route-id="@schedule.ScheduleId" method="post" class="d-inline">
                                                                    @Html.AntiForgeryToken()
                                                                    <button type="submit" class="btn btn-danger">
                                                                        <i class="bi bi-trash me-1"></i>Delete
                                                                    </button>
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        <div class="text-muted">
                                            <i class="bi bi-dash-circle me-2"></i>No schedules
                                        </div>
                                    }
                                </div>
                                <div class="col-md-2 text-end">
                                    <div class="mb-2">
                                        <span class="badge bg-primary">@dayHours.ToString("F1") hrs</span>
                                    </div>
                                    @if (!daySchedules.Any())
                                    {
                                        <a href="@Url.Action("Create", new { date = date, userId = user.UserId })"
                                           class="btn btn-sm btn-outline-success">
                                            <i class="bi bi-plus"></i> Add
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Schedule List -->
    <div class="card">
        <div class="card-header bg-light">
            <h5 class="mb-0"><i class="bi bi-list-ul me-2"></i>All Schedules</h5>
        </div>
        <div class="card-body">
            @if (schedules.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Day</th>
                                <th>Time</th>
                                <th>Location</th>
                                <th>Hours</th>
                                <th>Notes</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var schedule in schedules.OrderBy(s => s.ScheduledDate).ThenBy(s => s.StartTime))
                            {
                                var location = locations.FirstOrDefault(l => l.LocationId == schedule.LocationId);
                                <tr>
                                    <td>@schedule.ScheduledDate.ToString("MMM d, yyyy")</td>
                                    <td>@schedule.ScheduledDate.ToString("dddd")</td>
                                    <td>@schedule.TimeRange</td>
                                    <td>
                                        <i class="bi bi-geo-alt me-1"></i>@(location?.Name ?? "N/A")
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@schedule.ScheduledHours.ToString("F1") hrs</span>
                                    </td>
                                    <td>@schedule.Notes</td>
                                    <td>
                                        <a href="@Url.Action("Edit", new { id = schedule.ScheduleId })"
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <button type="button"
                                                class="btn btn-sm btn-outline-danger"
                                                data-bs-toggle="modal"
                                                data-bs-target="#deleteModal@(schedule.ScheduleId)">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-calendar-x" style="font-size: 4rem; color: #ccc;"></i>
                    <p class="text-muted mt-3">No schedules found for this period</p>
                    <a href="@Url.Action("Create", new { date = startDate, userId = user.UserId })"
                       class="btn btn-success">
                        <i class="bi bi-plus-circle me-2"></i>Create First Schedule
                    </a>
                </div>
            }
        </div>
    </div>
</div>
