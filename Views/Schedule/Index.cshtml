<script>
    const today = '@DateTime.Now.ToString("yyyy-MM-dd")';

    function openQuickSchedule(date, userId = null, userName = null) {
        // Check if date is in the past
        if (date < today) {
            showDateError("Cannot schedule for past dates. Please select today or a future date.");
            return;
        }

        document.getElementById('scheduleDate').value = date;
        if (userId) {
            document.getElementById('scheduleEmployee').value = userId;
        }
        if (userName) {
            document.getElementById('modalTitle').textContent = 'Schedule ' + userName;
        } else {
            document.getElementById('modalTitle').textContent = 'Add Schedule';
        }
        new bootstrap.Modal(document.getElementById('quickScheduleModal')).show();
    }

    function editSchedule(scheduleId) {
        window.location.href = '@Url.Action("Edit")/' + scheduleId;
    }

    function setQuickTime(start, end) {
        document.getElementById('startTime').value = start;
        document.getElementById('endTime').value = end;
    }

    function showDateError(message) {
        // Create toast notification
        const toast = document.createElement('div');
        toast.className = 'date-error-toast';
        toast.innerHTML = '<i class="bi bi-exclamation-triangle me-2"></i>' + message;
        document.body.appendChild(toast);

        // Animate in
        setTimeout(() => toast.classList.add('show'), 10);

        // Remove after 3 seconds
        setTimeout(() => {
            toast.classList.remove('show');
            setTimeout(() => toast.remove(), 300);
        }, 3000);
    }

    // Set today's date as default and add min date validation
    document.addEventListener('DOMContentLoaded', function() {
        const dateInput = document.getElementById('scheduleDate');
        if (dateInput) {
            // Set minimum date to today
            dateInput.setAttribute('min', today);

            if (!dateInput.value) {
                dateInput.value = today;
            }

            // Add validation on change
            dateInput.addEventListener('change', function() {
                if (this.value < today) {
                    showDateError("Cannot schedule for past dates. Please select today or a future date.");
                    this.value = today;
                }
            });
        }
    });

    // Form validation before submit
    document.getElementById('quickScheduleForm')?.addEventListener('submit', function(e) {
        const dateInput = document.getElementById('scheduleDate');
        if (dateInput.value < today) {
            e.preventDefault();
            showDateError("Cannot schedule for past dates. Please select today or a future date.");
            dateInput.value = today;
            return false;
        }
    });
</script>

